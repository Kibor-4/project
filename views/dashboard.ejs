<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/Public/stylesheet/dashboard.css">
    <link rel="shortcut icon" href="/favicon.svg" type="image/svg+xml">
</head>
<body class="dashboard">
    <!-- Header -->
    <header class="dashboard-header">
        <div class="logo">
            <img src="/favicon.svg" width="190" height="28" alt="Destro Logo">
        </div>
        <nav class="navbar">
            <ul class="navbar-list">
                <li><a href="#" class="navbar-link">Home</a></li>
                <li><a href="#" class="navbar-link">Properties</a></li>
                <li><a href="#" class="navbar-link">Users</a></li>
                <li><a href="#" class="navbar-link">Analytics</a></li>
            </ul>
        </nav>
        <div class="user-profile">
            <span>Welcome, Admin</span>
            <img src="/Public/images/user.png" alt="User Profile" class="profile-pic">
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="dashboard-sidebar">
        <ul class="sidebar-list">
            <li><a href="#" class="sidebar-link">Overview</a></li>
            <li><a href="#" class="sidebar-link">Properties</a></li>
            <li><a href="#" class="sidebar-link">Users</a></li>
            <li><a href="#" class="sidebar-link">Analytics</a></li>
            <li><a href="#" class="sidebar-link">Settings</a></li>
            <li><a href="#" class="sidebar-link">Log Out</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="dashboard-main">
        <h1>Dashboard Overview</h1>

        <!-- Key Metrics -->
        <div class="metrics">
            <div class="metric-card">
                <h2>Total Properties</h2>
                <p>1,234</p>
            </div>
            <div class="metric-card">
                <h2>Active Listings</h2>
                <p>567</p>
            </div>
            <div class="metric-card">
                <h2>Total Users</h2>
                <p>890</p>
            </div>
            <div class="metric-card">
                <h2>Revenue</h2>
                <p>$1,234,567</p>
            </div>
        </div>

        <!-- Recent Activities -->
        <section class="recent-activities">
            <h2>Recent Activities</h2>
            <ul>
                <li>New property listed: <strong>123 Main St</strong></li>
                <li>User <strong>John Doe</strong> registered</li>
                <li>Property <strong>456 Elm St</strong> sold</li>
                <li>New review submitted for <strong>789 Oak St</strong></li>
            </ul>
        </section>

        <!-- Property Listings -->
        <section class="property-listings">
            <h2>Recent Listings</h2>
            <div class="property-grid">
                <div class="property-card">
                    <img src="/Public/images/property-1.jpg" alt="Property 1">
                    <h3>123 Main St</h3>
                    <p>$500,000</p>
                </div>
                <div class="property-card">
                    <img src="/Public/images/property-2.jpg" alt="Property 2">
                    <h3>456 Elm St</h3>
                    <p>$750,000</p>
                </div>
                <div class="property-card">
                    <img src="/Public/images/property-3.jpg" alt="Property 3">
                    <h3>789 Oak St</h3>
                    <p>$1,000,000</p>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <p>&copy; 2025 Destro Real Estate. All rights reserved.</p>
        <nav>
            <ul>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
                <li><a href="#">Contact Us</a></li>
            </ul>
        </nav>
    </footer>
</body>
</html>