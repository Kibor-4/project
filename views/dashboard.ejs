<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/Public/stylesheet/dashboard.css">
    <link rel="shortcut icon" href="/favicon.svg" type="image/svg+xml">
    <style>
        /* User Dropdown Menu */
        .user-menu {
            position: relative;
            display: inline-block;
        }

        .user-button {
            background: none;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .user-button span {
            margin-right: 10px;
        }

        .profile-pic {
            width: 30px;
            height: 30px;
            border-radius: 50%;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            right: 0;
        }

        .dropdown-content a, .dropdown-content button {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
        }

        .dropdown-content a:hover, .dropdown-content button:hover {
            background-color: #ddd;
        }

        .user-menu:hover .dropdown-content {
            display: block;
        }

        .logout-button {
            color: red;
        }
    </style>
</head>
<body class="dashboard">
    <header class="dashboard-header">
        <div class="logo">
            <img src="/favicon.svg" width="190" height="28" alt="Destro Logo">
        </div>
        <nav class="navbar">
            <ul class="navbar-list">
                <li><a href="#" class="navbar-link">Home</a></li>
                <li><a href="#" class="navbar-link">Properties</a></li>
                <li><a href="#" class="navbar-link">Users</a></li>
                <li><a href="#" class="navbar-link">Analytics</a></li>
            </ul>
        </nav>
        <div class="user-menu">
            <button class="user-button">
                <span>Welcome, Admin</span>
                <img src="/Public/images/user.png" alt="User Profile" class="profile-pic">
            </button>
            <div class="dropdown-content">
                <a href="/profile">Profile</a>
                <a href="/settings">Settings</a>
                <button class="logout-button" onclick="window.location.href='/logout'">Logout</button>
            </div>
        </div>
    </header>

    <aside class="dashboard-sidebar">
        <ul class="sidebar-list">
            <li><a href="#" class="sidebar-link">Overview</a></li>
            <li><a href="#" class="sidebar-link">Properties</a></li>
            <li><a href="#" class="sidebar-link">Users</a></li>
            <li><a href="#" class="sidebar-link">Analytics</a></li>
            <li><a href="#" class="sidebar-link">Settings</a></li>
            <li><a href="#" class="sidebar-link">Log Out</a></li>
        </ul>
    </aside>

    <main class="dashboard-main">
        <h1>Dashboard Overview</h1>

        <div class="metrics">
            <div class="metric-card">
                <h2>Total Properties</h2>
                <p>1,234</p>
            </div>
            <div class="metric-card">
                <h2>Active Listings</h2>
                <p>567</p>
            </div>
            <div class="metric-card">
                <h2>Total Users</h2>
                <p>890</p>
            </div>
            <div class="metric-card">
                <h2>Revenue</h2>
                <p>$1,234,567</p>
            </div>
        </div>

        <section class="recent-activities">
            <h2>Recent Activities</h2>
            <ul>
                <li>New property listed: <strong>123 Main St</strong></li>
                <li>User <strong>John Doe</strong> registered</li>
                <li>Property <strong>456 Elm St</strong> sold</li>
                <li>New review submitted for <strong>789 Oak St</strong></li>
            </ul>
        </section>

        <section class="property-listings">
            <h2>Recent Listings</h2>
            <div class="property-grid">
                <div class="property-card">
                    <img src="/Public/images/property-1.jpg" alt="Property 1">
                    <h3>123 Main St</h3>
                    <p>$500,000</p>
                </div>
                <div class="property-card">
                    <img src="/Public/images/property-2.jpg" alt="Property 2">
                    <h3>456 Elm St</h3>
                    <p>$750,000</p>
                </div>
                <div class="property-card">
                    <img src="/Public/images/property-3.jpg" alt="Property 3">
                    <h3>789 Oak St</h3>
                    <p>$1,000,000</p>
                </div>
            </div>
        </section>
    </main>

    <footer class="dashboard-footer">
        <p>&copy; 2025 Destro Real Estate. All rights reserved.</p>
        <nav>
            <ul>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
                <li><a href="#">Contact Us</a></li>
            </ul>
        </nav>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userMenu = document.querySelector('.user-menu');
            const dropdownContent = document.querySelector('.dropdown-content');

            userMenu.addEventListener('click', function(event) {
                if (event.target.classList.contains('user-button')) {
                    dropdownContent.style.display = dropdownContent.style.display === 'block' ? 'none' : 'block';
                }
            });

            document.addEventListener('click', function(event) {
                if (!userMenu.contains(event.target)) {
                    dropdownContent.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>